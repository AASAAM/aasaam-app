#!/bin/bash

# echo set environment for all
echo "CONTAINER_NAME=$CONTAINER_NAME" >> /etc/environment
echo "CONTAINER_DATACENTER=$CONTAINER_DATACENTER" >> /etc/environment
echo "CONTAINER_COUNTRY=$CONTAINER_COUNTRY" >> /etc/environment
echo "CONTAINER_ENV=$CONTAINER_ENV" >> /etc/environment

# clear temporaries
rm -rf /tmp/{.[^.],.??*}
rm -rf /tmpfs/{.[^.],.??*}

# make directories
mkdir -p /tmp/php/spx
mkdir -p /tmpfs/container-helper
mkdir -p /tmpfs/fluentbit
mkdir -p /tmpfs/logs
mkdir -p /tmpfs/nginx/fastcgi/cache
mkdir -p /tmpfs/nginx/proxy/cache
mkdir -p /tmpfs/php/seaslog
mkdir -p /tmpfs/php/session
mkdir -p /tmpfs/php/soap
mkdir -p /tmpfs/php/tmp
mkdir -p /tmpfs/php/upload
mkdir -p /tmpfs/php/xdebug
mkdir -p /tmpfs/run

# set permission
chmod 777 /tmp -R
chmod 777 /tmpfs -R

# init dhparm
if [ -e "/app/etc/nginx/conf.d/addon/dhparam.pem" ]; then
  openssl dhparam -out /app/etc/nginx/conf.d/addon/dhparam.pem 2048
fi

# php extensions
# phpenmod amqp
# phpenmod apcu
# phpenmod ast
# phpenmod base58
# phpenmod bcmath
# phpenmod bz2
# phpenmod calendar
# phpenmod ctype
# phpenmod curl
# phpenmod dba
# phpenmod dom
# phpenmod ds
# phpenmod enchant
# phpenmod ev
# phpenmod event
# phpenmod exif
# phpenmod fann
# phpenmod fileinfo
# phpenmod ftp
# phpenmod gd
# phpenmod geoip
# phpenmod geospatial
# phpenmod gettext
# phpenmod gmp
# phpenmod gnupg
# phpenmod grpc
# phpenmod hashids
# phpenmod hprose
# phpenmod hrtime
# phpenmod iconv
# phpenmod igbinary
# phpenmod imagick
# phpenmod imap
# phpenmod interbase
# phpenmod intl
# phpenmod json
# phpenmod jsond
# phpenmod jwt
# phpenmod ldap
# phpenmod libevent
# phpenmod mbstring
# phpenmod memcached
# phpenmod mongodb
# phpenmod msgpack
# phpenmod mysqli
# phpenmod mysqlnd
# phpenmod odbc
# phpenmod opcache
# phpenmod opencensus
# phpenmod pdo
# phpenmod pdo_firebird
# phpenmod pdo_mysql
# phpenmod pdo_odbc
# phpenmod pdo_pgsql
# phpenmod pdo_sqlite
# phpenmod pgsql
# phpenmod phar
# phpenmod phpng_xhprof
# phpenmod posix
# phpenmod pspell
# phpenmod psr
# phpenmod raphf
# phpenmod rar
# phpenmod readline
# phpenmod recode
# phpenmod redis
# phpenmod request
# phpenmod rrd
# phpenmod seaslog
# phpenmod sha3
# phpenmod shmop
# phpenmod simplexml
# phpenmod soap
# phpenmod sockets
# phpenmod spx
# phpenmod sqlite3
# phpenmod ssh2
# phpenmod swoole
# phpenmod sync
# phpenmod sysvmsg
# phpenmod sysvsem
# phpenmod sysvshm
# phpenmod tidy
# phpenmod tokenizer
# phpenmod uopz # careful this one
# phpenmod uv
# phpenmod varnish
# phpenmod vcollect
# phpenmod vips
# phpenmod wddx
# phpenmod xdebug
# phpenmod xml
# phpenmod xmlreader
# phpenmod xmlrpc
# phpenmod xmlwriter
# phpenmod xsl
# phpenmod yac
# phpenmod yaf
# phpenmod yaml
# phpenmod zip
# phpenmod zmq

# config
if [ "$CONTAINER_ENV" = "dev" ]; then
  container-helper config -p fpm-dev --no-ansi
else
container-helper config -p fpm-prodlog --no-ansi
fi

# jobber
service jobber start

# immortal
immortal -c /app/etc/immortal/beanstalkd.yml
if [ "$CONTAINER_ENV" != "dev" ]; then
  immortal -c /app/etc/immortal/fluent-bit.yml
  immortal -c /app/etc/immortal/container-helper-log.yml
fi

# services
service php7.2-fpm start
service nginx start
